{
  "name": "spotify-mobile",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "android": "expo run:android",
    "find-deadcode": "ts-prune -p tsconfig.json -e",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "generate": "yarn plop --plopfile generators/plopfile.mjs",
    "generate:atom": "yarn plop --plopfile ./generators/plopfile.mjs atoms",
    "generate:mole": "yarn plop --plopfile ./generators/plopfile.mjs molecules",
    "generate:orgs": "yarn plop --plopfile ./generators/plopfile.mjs organisms",
    "postinstall": "husky install",
    "ios": "expo run:ios",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0 -f mo",
    "lint:fix": "pnpm eslint . --fix --ignore-pattern '**/generated/**/**.ts'",
    "lint:interactive": "eslint-nibble \"{src,apps,libs,test}/**/*.ts\"",
    "release": "semantic-release",
    "sort:package": "sort-package-json",
    "start": "expo start --dev-client",
    "test": "jest --maxWorkers=50% -u",
    "test:ci": "jest --runInBand -u",
    "test:e2e:ci": "jest --runInBand --config ./e2e/jest.config.ts",
    "test:watch": "jest --watch --maxWorkers=25%",
    "typecheck": "tsc --noEmit",
    "web": "expo start --web"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "package.json": "yarn sort:package",
    "src/**/*.{ts,tsx}": [
      "bash -c tsc --noEmit",
      "yarn find-deadcode",
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail --passWithNoTests"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@expo-google-fonts/poppins": "^0.2.3",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "clsx": "^2.1.0",
    "expo": "~49.0.21",
    "expo-font": "~11.4.0",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-updates": "~0.18.18",
    "moti": "^0.27.2",
    "nativewind": "^2.0.11",
    "polished": "^4.2.2",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-svg": "13.9.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/plugin-transform-private-methods": "^7.23.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/types": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "~18.2.45",
    "@types/react-native": "^0.73.0",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-mo": "^1.2.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-mdx": "^3.0.0",
    "eslint-nibble": "^8.1.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-hexagonal-architecture": "^1.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-mdx": "^3.0.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-expo": "^49.0.0",
    "lint-staged": "^15.2.0",
    "plop": "^4.0.1",
    "postcss-scss": "^4.0.9",
    "postcss-syntax": "^0.36.2",
    "prettier": "^3.1.1",
    "prettier-plugin-packagejson": "^2.4.7",
    "pretty-format": "^29.7.0",
    "react-native-svg-transformer": "^1.3.0",
    "react-test-renderer": "^18.2.0",
    "semantic-release": "^22.0.12",
    "sort-package-json": "^2.6.0",
    "tailwindcss": "3.3.2",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
